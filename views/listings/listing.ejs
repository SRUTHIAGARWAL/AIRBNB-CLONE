<% layout("/layout/boilerplate") -%>
    <h1>HOMYHIVE</h1>
    <div>
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
            <% for(let data of newData) { %>
                <a href="/listing/<%=data._id%>" class="listing_link">
                     <div class="card col" >
                    <img src="<%=data.image%>" 
                    class="card-img-top" 
                    alt="Listing_items" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                     <div class="card-body">
                        <p class="card-text " >
                        <%=data.price.toLocaleString("en-IN")%> <br/>
                        <%=data.title%>
                        </p>
                    </div>
                </div>
                </a>
               
         <%   } %>                                                   
        </div>
        
    </div>
    <form method="GET" action="/listing/new">
        <button type="submit">ADD A PLACE</button>
    </form>
