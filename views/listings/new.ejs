<% layout("/layout/boilerplate") -%>
<body>
    <h1>ADD A NEW PLACE</h1>
    <form method="post" action="/listing/add">
        <div>
            <p>TITLE OF YOUR PLACE : 
                <input type="text" name="title" />  </p>
            <p>DESCRIPTION OF YOUR PLACE : 
                <textarea name="description">Describe about your place</textarea>  </p>
             <p>RENT OF YOUR PLACE PER NIGHT : 
                <input type="number" name="price" /> </p>
            <p>LOCATION OF YOUR PLACE : 
                <textarea name="location" >Enter the location in detail</textarea>  </p>
             <p>COUNTRY :
                <input type="text" name="country" />  </p>
            <p>
                ENTER THE IMAGE OF YOUR LOCATION ONLY IN THE FORM OF URL:
                <input type="text" name="image" />
            </p>
            <button>ADD THE LOCATION</button>
        </div>
        
    </form>
</body>
